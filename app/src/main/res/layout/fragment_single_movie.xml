<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/shape_eight_corner"
    tools:background="@drawable/background_gradient"
    tools:context=".presentation.movielist.fragments.SingleMovieFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im_background_poster"
            android:contentDescription="@string/poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/test_image" />

        <ImageView
            android:id="@+id/imMoviePoster"
            android:contentDescription="@string/poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="500dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/test_image" />

        <TextView
            android:id="@+id/tvTitleMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/title_color"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@id/imMoviePoster"
            app:layout_constraintStart_toStartOf="@id/imMoviePoster"
            app:layout_constraintTop_toBottomOf="@+id/imMoviePoster"
            tools:text="\tSpider man" />

        <TextView
            android:id="@+id/tvDateMovieRelease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/oder_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleMovie"
            tools:text="Date release" />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/oder_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="@id/tvTitleMovie"
            app:layout_constraintStart_toEndOf="@id/tvDateMovieRelease"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleMovie"
            tools:text="Status" />

        <TextView
            android:id="@+id/tvGenreMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tvTitleMovie"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            tools:ignore="SmallSp"
            tools:text="Genre" />

        <TextView
            android:id="@+id/tvTagLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/oder_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tvTitleMovie"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"
            app:layout_constraintTop_toBottomOf="@+id/tvGenreMovie"
            tools:text="Tage" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@id/tvTitleMovie"
            app:layout_constraintStart_toStartOf="@+id/tvTitleMovie"
            app:layout_constraintTop_toBottomOf="@+id/tvTagLine"
            tools:text="Действие фильма «Человек-паук: Нет пути домой» начинает своё развитие в тот момент, когда Мистерио удаётся выяснить истинную личность Человека-паука. С этого момента жизнь Питера Паркера становится невыносимой. Если ранее он мог успешно переключаться между своими амплуа, то сейчас это сделать невозможно. Переворачивается с ног на голову не только жизнь Человека-пауку, но и репутация. Понимая, что так жить невозможно, главный герой фильма «Человек-паук: Нет пути домой» принимает решение обратиться за помощью к своему давнему знакомому Стивену Стрэнджу. Питер Паркер надеется, что с помощью магии он сможет восстановить его анонимность. Стрэндж соглашается помочь. Действие фильма «Человек-паук: Нет пути домой» начинает своё развитие в тот момент, когда Мистерио удаётся выяснить истинную личность Человека-паука. С этого момента жизнь Питера Паркера становится невыносимой. Если ранее он мог успешно переключаться между своими амплуа, то сейчас это сделать невозможно. Переворачивается с ног на голову не только жизнь Человека-пауку, но и репутация. Понимая, что так жить невозможно, главный герой фильма «Человек-паук: Нет пути домой» принимает решение обратиться за помощью к своему давнему знакомому Стивену Стрэнджу. Питер Паркер надеется, что с помощью магии он сможет восстановить его анонимность. Стрэндж соглашается помочь."
            tools:targetApi="o" />

        <TextView
            android:id="@+id/tvPopularityMovie"
            android:layout_width="@dimen/popularity_size"
            android:layout_height="@dimen/popularity_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_popularity_background"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/imMoviePoster"
            app:layout_constraintTop_toTopOf="@id/imMoviePoster"
            tools:ignore="TextContrastCheck"
            tools:text="8.4" />

        <ImageView
            android:id="@+id/imTrailer"
            android:contentDescription="@string/trailer_movie"
            android:layout_width="@dimen/popularity_size"
            android:layout_height="@dimen/popularity_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_trailer_background"
            android:gravity="center"
            android:src="@drawable/ic_play_arrow"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/imMoviePoster"
            app:layout_constraintTop_toBottomOf="@id/tvPopularityMovie"
            tools:text="8.4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
